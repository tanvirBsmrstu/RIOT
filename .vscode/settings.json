{
    "editor.rulers": [
        80,
        120
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "ssl.h": "c",
        "socket": "c",
        "thread": "cpp",
        "az_riot.h": "c",
        "system_error": "c",
        "mqtts_riot_iface.h": "c",
        "mutex.h": "c",
        "gnrc_wolfssl_tls.h": "c",
        "array": "c",
        "string_view": "c",
        "initializer_list": "c",
        "ranges": "c",
        "utility": "c",
        "az_core.h": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "cmake.configureOnOpen": true,
}
